{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "DeloreanZeta API"
	},
	"host": "localhost:3000",
	"basePath": "/",
	"tags": [
		{
			"name": "Users",
			"description": "Endpoint for users in the system"
		},
		{
			"name": "Hiring",
			"description": "Endpoint for comunication with the band"
		}
	],
	"schemes": ["http"],
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"paths": {
		"/users/{email}": {
			"get": {
				"tags": ["Users"],
				"summary": "Get user by email",
				"parameters": [
					{
					"name": "email",
					"in": "path",
					"description": "email of the user you want to recover",
					"required": true,
					"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"$ref": "#/definitions/User"
						}
					},
					"400": {
							"description": "Bad request"
					},
					"500": {
						"description": "Internal server error"
					}
				}
			}
		},
		"/users": {
			"get": {
				"tags": ["Users"],
				"summary": "Get all users in system",
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"$ref": "#/definitions/User"
						}
					},
					"400": {
							"description": "Bad request"
					},
					"500": {
						"description": "Internal server error"
					}
				}
			},
			"post":{
				"tags": ["Users"],
				"summary": "Add user in system",
				"parameters":[
					{
						"name": "body",
						"in": "body",
						"description": "id of the user you want to edit",
						"schema": {
							"type": "object", 
							"properties": {
							  "email": {
								"type": "string",
								"description": "user email"
							  },
							  "password": {
								"type": "string",
								"description": "user password"
							  },
							  "name": {
								"type": "string",
								"description": "user name"
							  },
							  "lastname": {
								"type": "string", 
								"description": "user lastname"
							  },
							  "telephone": {
								"type": "string",
								"description": "user telephone"
							  }
							}
						},
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"201": {
						"description": "User created"
					},
					"400": {
							"description": "Bad request"
					},
					"409": {
						"description": "Username already exist"
					}
				}
			}
		},
		"/users/{id}": {
			"patch": {
				"tags": ["Users"],
				"summary": "Edit user by id",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"description": "id of the user you want to edit",
						"required": true,
						"type": "string"
					},
					{
						"name": "body",
						"in": "body",
						"description": "id of the user you want to edit",
						"schema": {
							"type": "object", 
							"properties": {
							  "name": {
								"type": "string",
								"description": "Nombre del elemento"
							  },
							  "lastname": {
								"type": "string", 
								"description": "Edad del elemento"
							  },
							  "telephone": {
								"type": "string",
								"description": "Edad del elemento"
							  }
							}
						},
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"$ref": "#/definitions/User"
						}
					},
					"400": {
							"description": "Bad request"
					},
					"500": {
						"description": "Internal server error"
					}
				}
			},
			"delete":{
				"tags": ["Users"],
				"summary": "Delete user by id",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"description": "id of the user you want to edit",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"$ref": "#/definitions/User"
						}
					},
					"400": {
							"description": "Bad request"
					},
					"500": {
						"description": "Internal server error"
					}
				}
			}
		},
		"/hirings/send-email": {
			"post":{
				"tags": ["Hiring"],
				"summary": "Add user in system",
				"parameters":[
					{
						"name": "body",
						"in": "body",
						"description": "id of the user you want to edit",
						"schema": {
							"type": "object", 
							"properties": {
							  "name": {
								"type": "string",
								"description": "name of interested party"
							  },
							  "lastname": {
								"type": "string",
								"description": "lastname of interested party"
							  },
							  "telephone": {
								"type": "string",
								"description": "telephone of interested party"
							  },
							  "email": {
								"type": "string", 
								"description": "email of interested party"
							  },
							  "business": {
								"type": "string",
								"description": "business of interested party"
							  },
							  "message": {
								"type": "string",
								"description": "message of interested party"
							  }
							}
						},
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"201": {
						"description": "User created"
					},
					"400": {
							"description": "Bad request"
					},
					"409": {
						"description": "Username already exist"
					}
				}
			}
		}
	},
	"definitions": {
		"User": {
			"required": ["email", "password", "name", "lastname", "role"],
			"properties": {
				"id": {
					"type": "number",
					"uniqueItems":true
				},
				"email": {
					"type": "string",
					"uniqueItems": true
				},
				"password": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},				
				"lastname": {
					"type": "string"
				},
				"telephone": {
					"type": "string"
				},
				"role": {
					"type": "string"
				},
				"resetToken": {
					"type": "string"
				},
				"createdAt": {
					"type": "string"
				},
				"updateAt": {
					"type": "string"
				}
			}
		}
	}
